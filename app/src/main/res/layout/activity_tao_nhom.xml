<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaoNhom">

    <Button
        android:id="@+id/btnTaoNhom"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="23dp"
        android:text="Tạo nhóm" />

    <Button
        android:id="@+id/btnThamGiaNhom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTaoNhom"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="21dp"
        android:text="Tham gia nhóm" />

    <TextView
        android:id="@+id/tvDanhSachThamGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách nhóm đã tham gia"
        android:textSize="20dp"
        android:layout_below="@id/btnThamGiaNhom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ListView
        android:id="@+id/lvGroupList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDanhSachThamGia"
        android:layout_marginTop="10dp"/>
</RelativeLayout>

